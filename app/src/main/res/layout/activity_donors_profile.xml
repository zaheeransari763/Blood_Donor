<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorsProfile">

    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donor's Profile"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:fontFamily="@font/chewy"/>

    <LinearLayout
        android:layout_below="@id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/donorProfile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/default_avatar"
                android:scaleType="centerCrop"
                android:layout_marginLeft="4dp"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/donorProfile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/chewy"
                    android:text="UserName"
                    android:textAlignment="textStart"
                    android:textColor="@color/red"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/blood_group_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group:-"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:fontFamily="@font/chewy"/>

                    <TextView
                        android:id="@+id/donorProfile_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Blood Group"
                        android:textColorHint="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/date"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="DOB:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donorProfile_dob"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's DOB Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gender"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Gender:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donorProfile_gender"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Gender Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gender"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Phone no.:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donorProfile_contact"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Contact Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/address"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Email:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donorProfile_email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Address Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:maxLines="5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/address"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Address:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donorProfile_address"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Address Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:maxLines="5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/requestByMail"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/request"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:text="Request via Mail"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/callDonor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/call"
                android:paddingLeft="10dp"
                android:text="CALL"
                android:layout_marginLeft="3dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/contactInfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/saveDonor"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/save"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:text="SAVE DONOR"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/messageDonor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/message"
                android:paddingLeft="10dp"
                android:text="Message"
                android:layout_marginLeft="3dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>