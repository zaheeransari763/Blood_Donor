<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/donor_profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/default_avatar"
                android:scaleType="centerCrop"
                android:layout_marginLeft="4dp"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/donor_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/chewy"
                    android:text="UserName"
                    android:textAlignment="textStart"
                    android:textColor="@color/red"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/blood_group_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group:-"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:fontFamily="@font/chewy"/>

                    <TextView
                        android:id="@+id/blood_group_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Blood Group"
                        android:textColorHint="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/date"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="DOB:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donor_dob"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's DOB Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gender"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Gender:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donor_gender"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Gender Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gender"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Phone no.:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donor_contact"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Contact Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/address"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Email:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donor_email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Address Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:maxLines="5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/address"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Address:-"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donor_address"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Donor's Address Here"
                android:textSize="20sp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/red"
                android:paddingLeft="5dp"
                android:maxLines="5"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>